						</LinearLayout>
					</LinearLayout>
					<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
						<EditText android:layout_width="fill_parent" android:layout_height="fill_parent" android:ems="10" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:editable="false" android:textColor="#ffd014ff" android:text="@string/info_applist" android:textStyle="normal|italic" android:textSize="10sp"/>
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
			<Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#d827c506" android:text="Mulai" android:textColor="#FFF" android:layout_marginRight="10dp" android:padding="5dp" android:layout_margin="2dp"/>
