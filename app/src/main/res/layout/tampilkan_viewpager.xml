<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/background">
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="#d827c506">
		<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent">
			<ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/suyono" android:layout_marginRight="3dp"/>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="fill_parent" android:layout_weight="1" android:gravity="left|center">
			<TextView android:layout_width="wrap_content" android:layout_height="30dp" android:textAppearance="?android:attr/textAppearanceSmall" android:text="Floating ChatHead ViewPager" android:gravity="left|center" android:textColor="#ffffffff"/>
		</LinearLayout>
		<Button style="?android:attr/buttonStyleSmall" android:layout_width="30dp" android:layout_height="30dp" android:text="_" android:id="@+id/sembunyikan" android:layout_gravity="right|top" android:background="#90f0c171" android:textSize="15dp" android:textColor="#ffffffff" android:textStyle="bold" android:layout_margin="1dp" android:gravity="center"/>
		<Button style="?android:attr/buttonStyleSmall" android:layout_width="30dp" android:layout_height="30dp" android:text="X" android:id="@+id/dismiss" android:background="#90f0c171" android:textSize="15dp" android:textColor="#ffffffff" android:layout_gravity="right" android:textStyle="bold" android:layout_margin="1dp" android:gravity="center"/>
	</LinearLayout>
	<com.suyonoion.floatingchathead.tampilkanViewPager android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
